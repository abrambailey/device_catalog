<%= form_for @style, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> /Style</legend>

    <div class="control-group">
    <%= f.label :brand_name, :class => 'control-label'  %>
    <div class="controls">
    <%= f.text_field :brand_name, data: {autocomplete_source: brands_path}, :class => 'text_field'  %>
		</div></div>
		
    <div class="control-group">
    <%= f.label :model_name, :class => 'control-label'  %>
    <div class="controls">
    <%= f.text_field :model_name, data: {autocomplete_source: models_path}, :class => 'text_field'  %>
		</div></div>

    <div class="control-group">
    <%= f.label :submodel_name, :class => 'control-label'  %>
    <div class="controls">
    <%= f.text_field :submodel_name, data: {autocomplete_source: submodels_path}, :class => 'text_field'  %>
		</div></div>
		
    <div class="control-group">
      <%= f.label :name, "Style", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>
		
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', styles_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
